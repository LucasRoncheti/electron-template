{
  "name": "estudo-electron",
  "version": "1.0.3",
  "description": "Demo Vite + Electron + Puppeteer",
  "main": "electron/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron:dev": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "puppeteer:test": "node scripts/puppeteer-test.mjs",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build": "npm run build:frontend && electron-builder",
    "release": "npm run build:frontend && electron-builder --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "puppeteer": "^24.32.0"
  },
  "build": {
    "appId": "com.seuprojeto.demo",
    "productName": "Demo Vite Electron Puppeteer",
    "directories": {
      "buildResources": "build"
    },
    "asarUnpack": [
      "node_modules/puppeteer/**"
    ],
    "files": [
      "electron/**/*",
      "scripts/**/*",
      "frontend/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": [
    {
      "provider": "github",
      "owner": "lucasRoncheti",
      "repo": "electron-template"
    }
  ],
    "win": {
      "target": "nsis",
      "icon": "build/ico.ico"
    }
  }
}
